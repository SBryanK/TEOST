<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.Teost" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/tencent_blue</item>
        <item name="colorPrimaryDark">@color/tencent_blue_dark</item>
        <item name="colorPrimaryVariant">@color/tencent_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/secondary_blue</item>
        <item name="colorSecondaryVariant">@color/secondary_blue_dark</item>
        <item name="colorOnSecondary">@color/tencent_blue_dark</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <!-- System Splash Screen Theme (AndroidX SplashScreen) -->
    <style name="Theme.EdgeOne.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/teoc</item>
        <item name="postSplashScreenTheme">@style/Theme.EdgeOne</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="windowSplashScreenAnimationDuration">700</item>
        <!-- Ensure no legacy ActionBar/title bar shows during/after splash -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <!-- Main App Theme -->
    <style name="Theme.EdgeOne" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/tencent_blue</item>
        <item name="colorPrimaryDark">@color/tencent_blue_dark</item>
        <item name="colorPrimaryVariant">@color/tencent_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/secondary_blue</item>
        <item name="colorSecondaryVariant">@color/secondary_blue_dark</item>
        <item name="colorOnSecondary">@color/tencent_blue_dark</item>
        <item name="colorAccent">@color/tencent_blue</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!-- Extra safety: explicitly disable legacy ActionBar/title bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- Post-splash handled by Compose; keep system bars transparent in main theme -->
    </style>
    
    <!-- Dark Theme -->
    <style name="Theme.EdgeOne.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/tencent_blue_light</item>
        <item name="colorPrimaryDark">@color/tencent_blue</item>
        <item name="colorPrimaryVariant">@color/tencent_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/secondary_blue_dark</item>
        <item name="colorSecondaryVariant">@color/secondary_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorAccent">@color/tencent_blue_light</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>
</resources>